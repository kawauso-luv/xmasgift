<!DOCTYPE html>
<html lang="ja">
<head>
  <title>UNBOX</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  
  <%= erb :navi %>
  
  <div class="cp_iptxt">
    <form action="/sendto/<%= @user_id %>" method="post" class="sendform">
        <textarea required name="content" id="txt"  placeholder="素敵なメッセージプレゼントを贈ろう"></textarea><br>
        <div class="send-btnbox"><input type="submit" class="btn btn--red btn--radius" value="送る！"></div>
    </form>
    </div>
      <script>
        const form = document.querySelector(".sendform");
        
        form.addEventListener("submit", async function(e) {
          e.preventDefault();
          
          await fetch(form.action, {
            method: "POST", 
            body: new FormData(form)
          })
          
          alert('送信しました');
          const imput = document.querySelector("#txt");
          imput.value = "";
          
        })
      </script>
</body>
</html>